<section id="{{name|escape('html_attr')}}" class="fanferret-checklist fanferret-question {% if hasOther %}fanferret-other{% endif %}">
	<div class="fanferret-question-title">{{title}}</div>
	<div class="fanferret-question-input">
		<ul class="fanferret-checklist-options">
			{% for option in options %}
			<li class="fanferret-checklist-option">
				<a href="javascript:void(0);" data-value="{{loop.index0|escape('html_attr')}}"></a>
				<span class="fanferret-checklist-option-label">{{option}}</span>
			</li>
			{% endfor %}
			{% if hasOther %}
			<li class="fanferret-checklist-option fanferret-checklist-option-other">
				<a href="javascript:void(0);" data-value="other"></a>
				<span class="fanferret-checklist-option-label">Other</span>
				<div class="fanferret-checklist-option-other-text" style="display:none;">
					<input class="form-control" type="text">
				</div>
			</li>
			{% endif %}
		</ul>
	</div>
</section>
{% include 'FanFerretQuestionBundle:Question:add.html.twig' with {'name': name, 'dependency': 'checklist'} %}