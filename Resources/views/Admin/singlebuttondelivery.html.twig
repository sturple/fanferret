{% extends 'FanFerretQuestionBundle:Admin:base.html.twig' %}

{% block content %}
<div class="admin-header">
<h1>Guest Comment Card Delivery</h1>
<h2>{{survey.property.name}}</h3>
<h3>Survey: "{{survey.name}}"</h3>

</div>

{% if session %}
{% include 'FanFerretQuestionBundle:Admin:surveysessioncreated.html.twig' with {'sessions': [session]} %}
{% endif %}

{{form_start(form, {'attr': {'class' : 'form-inline'}})}}
	{{form_errors(form)}}	
	<div class="form-group" >
		<label for="{{form.email.vars.id|escape('html_attr')}}" class="">Email</label>
		{{form_widget(form.email,{'attr': {'class': 'form-control input-lg'}})}}
	</div>		
	{{form_widget(form.submit,{'attr': {'class': 'btn btn-primary btn-lg'}, 'label': 'Send Card Now'})}}
	
{{form_end(form)}}
{% endblock %}

{% block nav %}
	<span class="btn-survey-actions"><a class="btn btn-primary" href="{{path('fanferret_admin')|escape('html_attr')}}"><i class="fa fa-hand-o-left" aria-hidden="true"></i> Back to Index</a></span>
	{{parent()}}
{% endblock %}